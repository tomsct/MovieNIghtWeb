<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/profile.css">

<div class="container d-flex justify-content-center align-items-center">
    <div class="card w-50">
        <div class="card-body">
            <div class="row">
                <h5 class="card-title text-center">Profile</h5>

                <div class="col-8 text-center my-auto">
                        <input class="form-control" type="file" name="avatar" id="avatar">
                </div>

                <div class="col-4">
                    <% if(user.avatar) %>
                    <img id="avatar-img" class="rounded-circle img-responsive mx-auto" src="<%= user.avatar %>" alt="">
                </div>
                
                <div class="row">
                    <div class="col my-auto mt-1">
                        <label class="" for="username">Email address</label>
                        <input class="form-control"name="email" type="email">
                    </div>
                </div>

                <div class="row">
                    <div class="col my-auto mt-1">
                        <label for="description">Description</label>
                         <textarea class="form-control" id="description" rows="3" style="resize: none;"></textarea>
                    </div>
                </div>

                <div class="row mt-4">
                    <div class="col text-center">
                        <button class="btn btn-danger">Cancel</button> 
                    </div>
                    <div class="col text-center">
                        <button  type="submit" class="btn btn-success">Save</button>
                    </div>
                </div>
            </div> 
        </div>
    </div>
</div>

